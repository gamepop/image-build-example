Bootstrap: docker
From: ubuntu:22.04

%post
    apt-get update -y
    apt-get -y install git python3 python3-pip  # Install git and pip
    git clone https://github.com/erkin/ponysay.git /tmp/ponysay
    cd /tmp/ponysay
    pip3 install .
    apt-get -y install lolcat

%environment
    export LC_ALL=C
    export PATH=/tmp/ponysay:$PATH  # Add ponysay to PATH

%runscript
    date | ponysay | lolcat